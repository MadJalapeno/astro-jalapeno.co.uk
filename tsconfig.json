{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "ES2022",
		"target": "es2022",
		"types": ["vite/client"],
		"baseUrl": ".",
		"allowJs": true,
		"paths": {
			"@components/*": [
				"src/components/*",
			],
			"@layouts/*": [
				"src/components/layouts/*",
			],
			"@data/*": [
				"src/data/*",
			],
			"@content/*": [
				"src/content/*",
			],
			"@widgets/*": [
				"src/components/widgets/*",
			],
			"@assets/*": [
				"src/assets/*",
			],
		},
	}
}