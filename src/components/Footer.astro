---
const year = new Date().getFullYear();
import { getGitVersion } from '/src/utils/getGitVersion';

const gitVersion = getGitVersion();
import { Icon } from 'astro-icon/components';

---

<!-- Footer -->
<footer class="footer footer-center p-4 bg-base-300 p-10 flex flex-col">
    <div class="grid gap-4 lg:grid-cols-2">
        <div class="mb-6 md:mb-0">
            <p class="text-xs text-base-content/70">
                &copy; <span id="footer-year">{year}</span> All rights reserved.</p>
            </div>
            <div class="mb-6 md:mb-0">
            <p class="text-xs text-base-content/70">
                <Icon name="astro"  alt="Astro Logo" class="bg-base-200 text-2xl items-center"/><a href="https://astro.build">Astro</a>
            </p>
            <p class="text-xs text-base-content/70">
                Source Code Version: {gitVersion}</p>
            </div>
        </div>
    </div>
 </footer>

 <script>
    document.getElementById('footer-year').innerText = new Date().getFullYear();
</script>


<!-- Footer end -->