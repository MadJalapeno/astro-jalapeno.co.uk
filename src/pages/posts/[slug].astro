// Import the hero image statically
let heroImagePath;
if (post.data.hero) {
  try {
    heroImagePath = await import(`${post.data.hero}`);
  } catch (error) {
    throw new Error(`Hero image not found at path: ${post.data.hero}`);
  }
}

// Normalize tags to always be an array
const tags = Array.isArray(post.data.tags) ? post.data.tags : [post.data.tags].filter(Boolean);

export async function getStaticPaths() {
  const allPosts = await getCollection("posts");
  return allPosts.map((post) => {
    const slug = slugify(post.data.title, { lower: true });
    return { params: { slug } };
  });
}

// Render the content
const { Content } = await render(post);
