---
import Header from '@partials/Header.astro';
import Footer from '@partials/Footer.astro';
import Navbar from "@partials/Navigation.astro";
import ThemeChange from "@partials/ThemeChange.astro";

const { pageTitle } = Astro.props;

// https://github.com/saadeghi/daisy-blog/blob/master/src/components/layouts/page.astro

---
<!DOCTYPE html>
<html lang="en">
  <Header pageTitle={pageTitle}/>
    
 <body>
<div class="flex flex-col h-screen justify-between">
  <!-- Header -->
  <header>
    <div class="w-3/4 m-auto max-w-5xl">
        <Navbar pageTitle="Jalapeno">
          <ThemeChange />
        </Navbar>
    </div>
  </header>

  <!-- Main Content -->
  <main>
    <div class="w-3/4 m-auto max-w-5xl">
      <slot />
      </div>
  </main>

  <!-- Footer -->
    <footer>
      <Footer />
    </footer>

</div>
        
</body>
</html>